@page
@model ManageBooksModel
@{
    ViewData["Title"] = "Edit book";
}

<br />
@if (Model.Book != null && Model.Book.Id != 0)
{
    <h2 class="text-info">Edit Book</h2>
}
else
{
    <h2 class="text-info">Add a new book</h2>
}
<br />


<div class="border container" style="padding:30px;">
    <form method="post">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @if (Model.Book != null && Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ReleaseDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ReleaseDate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.PageCount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.PageCount" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                @if (Model.Book != null && Model.Book.Id != 0)
                {
                    <input type="submit" asp-page-handler="Update" value="Update" class="btn btn-primary form-control" />
                }
                else
                {
                    <input type="submit" asp-page-handler="Add" value="Add" class="btn btn-primary form-control" />
                }
            </div>


            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
</form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
